{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb; Database=HabrDB; Persist Security Info = false; User ID='sa';Password='sa'; MultipleActiveResultSets = True; Trusted_Connection=False;"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "Jwt": {
    "Issuer": "someIssuer",
    "Audience": "someAudience",
    "Key": "its_super_secret_key",
    "TokenValidityInSecond": "3600"
  },

  "RefreshToken": {
    "RefreshTokenValidityInDays": "7"
  },

  "Content": {
    "PathImagesToSave": "wwwroot\\Images",
    "PathImagesToGet": "Images",
    "PathDefaultAvatar": "Images\\DefaultAvatar.png"
  },

  "Mail": {
    "Regex": "\\A(?:[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?)\\Z"
  }
}
